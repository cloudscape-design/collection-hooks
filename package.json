{
  "name": "@cloudscape-design/collection-hooks",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudscape-design/collection-hooks.git"
  },
  "homepage": "https://cloudscape.design",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "test-8:00": "TZ=America/Los_Angeles jest -o ./src/__tests__/utils",
    "test+8:00": "TZ=Asia/Brunei jest -o ./src/__tests__/utils",
    "test-local": "jest --coverage",
    "test": "npm run test-8:00 && npm run test+8:00 && npm run test-local",
    "clean": "rimraf ./dist",
    "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "generate-deep-package": "node ./scripts/generate-deep-package.js",
    "prepublishOnly": "npm run clean && npm run build && npm run generate-deep-package",
    "prepare": "husky install"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/mjs/index.js"
    },
    "./operations": {
      "require": "./dist/cjs/operations.js",
      "default": "./dist/mjs/operations.js"
    }
  },
  "files": [
    "dist",
    "operations.js",
    "operations.d.ts",
    "package.json",
    "README.md"
  ],
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.24",
    "@types/react": "^16.14.21",
    "@types/react-dom": "^16.9.14",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-header": "3.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^11.0.2",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.5.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "resolver": "jest-ts-webcompat-resolver",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**",
      "!**/__tests__/**"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.unit.json"
      }
    },
    "testRegex": "/__tests__/.*\\.test\\.tsx?$"
  }
}
